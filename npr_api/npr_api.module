<?php

/**
 * @file
 * Creates basic calls to NPR API; creates and parses NPR's flavor of XML (NPRML).
 */

/**
 * Returns a nested array of info about all NPRML "fields".
 *
 * @return
 *   An array of all NPRML "fields".
 */
function npr_api_get_nprml_fields() {
  $nprml_fields = array(
    'id' => array(
      'type' => 'attribute',
      'accepted_types' => array('text_textfield'),
      'description' => t('A unique identifier for the content.')
    ),
    'subtitle' => array(
      'type' => 'text',
      'accepted_types' => array('text_textfield'),
      'description' => t('Text giving additional information about the content.')
    ),
    'shortTitle' => array(
      'type' => 'text',
      'accepted_types' => array('text_textfield'),
      'description' => t('A shorter version of the title.')
    ),
    'miniTeaser' => array(
      'type' => 'text',
      'accepted_types' => array('text_textfield'),
      'description' => t('A shorter version of the teaser.')
    ),
    'slug' => array(
      'type' => 'text',
      'accepted_types' => array('text_textfield', 'options_select'),
      'description' => t('A short phrase or title used to indicate the story content.')
    ),
    'image' => array(
      'type' => 'image',
      'accepted_types' => array('image_image'),
      'description' => t('An image related to the content.')
    ),
    'audio' => array(
      'type' => 'audio',
      'accepted_types' => array('npr_audio'),
      'description' => t('An audio file related to the content.')
    ),
  );
  return $nprml_fields;
}
